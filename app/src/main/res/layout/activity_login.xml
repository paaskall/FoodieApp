<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="152dp"
        android:layout_gravity="center"
        android:contentDescription="Logo"
        android:paddingBottom="24dp"
        android:src="@mipmap/ic_banner_foreground" />

    <!-- Username Input -->
    <EditText
        android:id="@+id/email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:fontFamily="@font/roboto_light" /> <!-- Gunakan font Coolvetica -->

    <!-- Password Input -->
    <EditText
        android:id="@+id/password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:fontFamily="@font/roboto_light" /> <!-- Gunakan font Coolvetica -->

    <!-- Remember Me -->
    <CheckBox
        android:id="@+id/cbRememberMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember me"
        android:layout_gravity="center"
        android:paddingTop="8dp"
        android:buttonTint="@color/black"
        android:textColor="@color/black"
        android:fontFamily="@font/coolvetica_rg" /> <!-- Gunakan font Coolvetica -->

    <!-- Login Button -->
    <Button
        android:id="@+id/login_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/coolvetica_rg" /> <!-- Gunakan font Coolvetica -->

    <!-- Forgot Password -->
    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_gravity="center"
        android:paddingTop="16dp"
        android:fontFamily="@font/coolvetica_rg" /> <!-- Gunakan font Coolvetica -->

    <!-- Link to Register -->
    <TextView
        android:id="@+id/tvRegisterLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have account? Register here"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_gravity="center"
        android:paddingTop="8dp"
        android:fontFamily="@font/coolvetica_rg" /> <!-- Gunakan font Coolvetica -->

</LinearLayout>
